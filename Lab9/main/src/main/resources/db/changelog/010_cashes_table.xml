<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="10" author="pxlxta">
        <createTable tableName="cashes">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="cash_tendered" type="FLOAT">
                <constraints nullable="false" checkConstraint="amount >= 0"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="10.1" author="pxlxta">
        <addForeignKeyConstraint
                baseTableName="cashes"
                baseColumnNames="id"
                constraintName="fd_cash_payment"
                referencedTableName="payments"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>